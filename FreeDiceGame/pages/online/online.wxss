/* pages/online/online.wxss */
.subpage {
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 100%;
}
.zone1 view{
  width: 150rpx;
  height: 150rpx;
  text-align: center;
  line-height: 150rpx;
  z-index: 1;
}
.zone1 view:nth-child(1){
  background-color: rgb(211, 207, 202);
  border: solid;
}
.zone1 view:nth-child(2){
  background-color: rgb(211, 207, 202);
  border-top: solid;
  border-bottom: solid;
}
.zone1 view:nth-child(3){
  background-color: rgb(211, 207, 202);
  border: solid;
}
.zone1 {
  display: flex;
  justify-content: center; /**内容居中*/
  z-index: 1;
}
